<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layoutDirection="rtl"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layoutDirection="rtl"
        android:layout_height="wrap_content">
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اسم الشحنة :"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اسم الشحنة"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:layout_gravity="start"
        android:layout_marginStart="3dp"
        android:id="@+id/txt_ordername"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سعر الشحنة :"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مكان التوصيل"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_gravity="start"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/txt_orderprice"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رسوم التوصيل :"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مكان التوصيل"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_gravity="start"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/txt_orderfee"
                />
        </LinearLayout>
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مكان التسليم :"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مكان التوصيل"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:layout_gravity="start"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/txt_orderplace"
        />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مكان الاستلام :"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مكان التوصيل"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_gravity="start"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/txt_orderplacefrom"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تم التسليم "
            android:textColor="@color/colorPrimary"
            android:gravity="left"
            android:textSize="14sp"
            android:id="@+id/txt_status"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>