<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#881002"
    tools:context=".ui.Activities.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/backimg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="20dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layoutDirection="ltr"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/appname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_EG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EG"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/colorAccent"
                        android:textSize="30sp" />
                    <TextView
                        android:id="@+id/txt_shipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shipo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/colorwhite"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/newlogo"
                    android:layout_gravity="start"
                    android:id="@+id/img_user"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/colorAccent"
                        android:text="اختر صورة شخصية"
                        android:id="@+id/choose_image"
                        android:layout_gravity="end|center"
                        android:gravity="center"
                        android:background="@drawable/cardlogin"
                        android:layout_marginEnd="20dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cardlogin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/fullname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:maxLines="1"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="start|center"
                        android:hint="@string/fname"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorAccent"
                        android:paddingEnd="10dp"
                        android:textColorHint="@color/colorAccent" />

                </LinearLayout>
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cardlogin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/lastname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:maxLines="1"
                        android:inputType="textPersonName"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="start|center"
                        android:hint="@string/lname"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorAccent"
                        android:paddingEnd="10dp"
                        android:textColorHint="@color/colorAccent" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:visibility="gone"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cardlogin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/user_email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:lines="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="start|center"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorAccent"
                        android:paddingEnd="10dp"
                        android:textColorHint="@color/colorAccent" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cardlogin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/user_phone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:lines="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="start|center"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:textColor="@color/colorAccent"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:textColorHint="@color/colorAccent" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cardlogin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/user_pass"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:lines="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="start|center"
                        android:hint="@string/pass"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorAccent"
                        android:paddingEnd="10dp"
                        android:textColorHint="@color/colorAccent" />

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cardlogin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:text="اختر المحافظة"
                        android:layout_gravity="end|center"
                        android:gravity="center"
                        />
                    <Spinner
                        android:layout_weight="2"
                        android:backgroundTint="@color/colorAccent"
                        android:id="@+id/sp_mohafza"
                        android:textAlignment="center"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cardlogin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:text="اختر المنطقة"
                        android:layout_gravity="end|center"
                        android:gravity="center"
                        />
                    <Spinner
                        android:layout_weight="2"
                        android:backgroundTint="@color/colorAccent"
                        android:id="@+id/sp_area"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relLocatoin"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cardlogin">
                    <EditText
                        android:visibility="gone"
                        android:id="@+id/user_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="start"
                        android:hint="@string/location"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorAccent"
                        android:paddingEnd="10dp"
                        android:lines="1"
                        android:focusableInTouchMode="false"
                        android:drawableEnd="@drawable/ic_add_location"
                        android:textColorHint="@color/colorAccent" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_regis"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="16sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/registbtn"
                    android:textColor="#000" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>