<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".ui.Fragments.NewOrder">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/container"
                android:layout_alignParentTop="true"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="اختر مكان الاستلام والتسليم والتقيم"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@id/container"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="من"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cardlogin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:text="اختر المحافظة"
                            android:layout_gravity="end|center"
                            android:gravity="center"
                            />
                        <Spinner
                            android:layout_weight="2"
                            android:backgroundTint="@color/colorAccent"
                            android:id="@+id/sp_fromprov"
                            android:textAlignment="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cardlogin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:text="اختر المنطقة"
                            android:layout_gravity="end|center"
                            android:gravity="center"
                            />
                        <Spinner
                            android:layout_weight="2"
                            android:backgroundTint="@color/colorAccent"
                            android:id="@+id/sp_fromcity"
                            android:textAlignment="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="الى"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cardlogin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:text="اختر المحافظة"
                            android:layout_gravity="end|center"
                            android:gravity="center"
                            />
                        <Spinner
                            android:layout_weight="2"
                            android:backgroundTint="@color/colorAccent"
                            android:id="@+id/sp_toprov"
                            android:textAlignment="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cardlogin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:text="اختر المنطقة"
                            android:layout_gravity="end|center"
                            android:gravity="center"
                            />
                        <Spinner
                            android:layout_weight="2"
                            android:backgroundTint="@color/colorAccent"
                            android:id="@+id/sp_tocity"
                            android:textAlignment="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cardlogin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:text="اختر التقيم"
                            android:layout_gravity="end|center"
                            android:gravity="center"
                            />
                        <Spinner
                            android:layout_weight="2"
                            android:backgroundTint="@color/colorAccent"
                            android:id="@+id/sp_rate"
                            android:textAlignment="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_search"
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="3dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="16sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="بحث"
                        android:textColor="@color/colorPrimary" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الكل"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/container"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/txt_all"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_below="@id/txt_all"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/rec_newOrders"
                />
            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نتائج البحث"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_below="@id/rec_newOrders"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/rec_search"
                />
            <TextView
                android:id="@+id/text_noOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorwhite"
                android:text="لا يوجد طلبات حتى الان"
                android:gravity="center"
                android:visibility="gone"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>