<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A0C01"
    tools:context=".ui.Activities.NavActivity">

    <LinearLayout
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_EG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EG"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorAccent"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/txt_shipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipo"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorwhite"
            android:textSize="60sp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardlin"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/centerLin"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardBackgroundColor="@color/colorwhite" />

    <LinearLayout
        android:id="@+id/centerLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appname"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="top|center"
            android:src="@drawable/newlogo"
            android:transitionName="example_transition" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardlin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="THE WORLD"
            android:layout_marginBottom="-30dp"
            android:textColor="#fff"
            android:textSize="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="AT YOUR HAND"
            android:textColor="#fff"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_regis2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#FDEA3B"
            app:cardCornerRadius="16sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/registbtn"
                android:textColor="#000" />
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/btn_login2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/cardlogin"
            android:text="@string/login"
            android:textColor="#FFEB3B" />
    </LinearLayout>
</RelativeLayout>