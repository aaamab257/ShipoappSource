<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_red"
    tools:context=".ui.Activities.CreateOrder">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_red"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="@string/createoredere"
            android:textColor="@color/colorwhite" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <EditText
            android:id="@+id/order_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/cardlogin"
            android:hint="نوع الشحنة"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:inputType="text"
            android:gravity="start|center"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />
        <EditText
            android:id="@+id/order_locafrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/cardlogin"
            android:hint="@string/locationf"
            android:focusableInTouchMode="false"
            android:drawableEnd="@drawable/ic_add_location"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:padding="10dp"
            android:gravity="start|center"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />
        <EditText
            android:id="@+id/order_locato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            android:layout_marginEnd="20dp"
            android:background="@drawable/cardlogin"
            android:hint="@string/locationt"
            android:focusableInTouchMode="false"
            android:drawableEnd="@drawable/ic_add_location"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:gravity="start|center"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"  />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="من"
            android:layout_gravity="end|center"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/cardlogin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:weightSum="4"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="اختر المحافظة"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    />
                <Spinner
                    android:layout_weight="2"
                    android:backgroundTint="@color/colorAccent"
                    android:id="@+id/sp_mohafza"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/cardlogin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:weightSum="4"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="اختر المنطقة"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    />
                <Spinner
                    android:layout_weight="2"
                    android:backgroundTint="@color/colorAccent"
                    android:id="@+id/sp_area"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
        <EditText
            android:id="@+id/addressfrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/cardlogin"
            android:hint="العنوان بالتفصيل"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:inputType="text"
            android:gravity="start|center"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="الى"
            android:layout_gravity="end|center"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/cardlogin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:weightSum="4"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="اختر المحافظة"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    />
                <Spinner
                    android:layout_weight="2"
                    android:backgroundTint="@color/colorAccent"
                    android:id="@+id/sp_mohafza2"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/cardlogin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:weightSum="4"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="اختر المنطقة"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    />
                <Spinner
                    android:layout_weight="2"
                    android:backgroundTint="@color/colorAccent"
                    android:id="@+id/sp_area2"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
        <EditText
            android:id="@+id/addressto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/cardlogin"
            android:hint="العنوان بالتفصيل"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:inputType="text"
            android:gravity="start|center"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />
        <EditText
            android:id="@+id/order_time"
            android:inputType="datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:focusableInTouchMode="false"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:drawablePadding="5dp"

            android:background="@drawable/cardlogin"
            android:hint="@string/time"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:gravity="start|center"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"  />

        <EditText
            android:id="@+id/order_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:layout_marginStart="20dp"
            android:focusableInTouchMode="false"
            android:layout_marginEnd="20dp"
            android:background="@drawable/cardlogin"
            android:hint="@string/histroy"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:gravity="start|center"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"  />
        <EditText
            android:id="@+id/order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="numberDecimal"
            android:background="@drawable/cardlogin"
            android:hint="@string/price"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:gravity="start|center"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"  />
        <EditText
            android:id="@+id/order_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/cardlogin"
            android:hint="@string/fe"
            android:inputType="numberDecimal"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:gravity="start|center"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"  />
        <EditText
            android:id="@+id/order_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/cardlogin"
            android:hint="المنطقة"
            android:visibility="gone"
            android:enabled="false"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            android:padding="10dp"
            android:gravity="start|center"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"  />
        <EditText
            android:id="@+id/order_details"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="top|start"
            android:background="@drawable/cardlogin"
            android:hint="@string/Addetails"
            android:inputType="textMultiLine"
            android:paddingStart="10dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"  />
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_addads"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="16sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add_ads"
                android:textColor="@color/colorPrimary" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>